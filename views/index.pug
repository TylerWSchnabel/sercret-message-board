extends layout

block content
  h1= title
  p Welcome to The Secret Message Board 
  p Tell us a secret!

  if user 
    h1 Welcome back #{user.username}
    a(href="/log-out") LOG OUT
  else 
    h3 Login
    form(action="/login" method="POST") 
        p
          p  Username: 
              input(type='text', for='username', name='username', value='', placeholder='username')
          p Password: 
              input(type="text", for='password', name='password', value='', placeholder='password')
          input(type="submit", value='Submit')
  